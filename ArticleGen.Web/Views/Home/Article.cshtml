@using ArticleGen.Web.Helpers
@model ArticleGen.Core.Models.ArticleModel

@{
    ViewData["Title"] = Model.ArticleName;
}

<div class="page-header">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="FrontPage" asp-route-industry="@Model.Industry">@Model.Industry</a></li>
                <li class="breadcrumb-item active" aria-current="page">@Model.ArticleName</li>
            </ol>
        </nav>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <article class="article-content">
                <header class="mb-4">
                    <h1>@Model.ArticleName</h1>
                    <div class="d-flex align-items-center text-muted mb-3">
                        <i class="fas fa-calendar-alt me-2"></i>
                        <span class="me-3">@DateTime.Now.ToString("MMMM dd, yyyy")</span>
                        <i class="fas fa-clock me-2"></i>
                        <span class="me-3">5 min read</span>
                        <i class="fas fa-tag me-2"></i>
                        <span>@Model.Industry</span>
                    </div>
                    <div class="border-bottom pb-3 mb-4"></div>
                </header>
                
                <div class="article-body">
                    @Html.Raw(MarkdownHelper.ConvertMarkdownToHtml(Model.Content))
                </div>
                
                <footer class="mt-5 pt-4 border-top">
                    <div class="row align-items-center">
                        <div class="col-md-6">
                            <h6 class="fw-bold mb-2">Share this article:</h6>
                            <div class="d-flex gap-2">
                                <a href="#" class="btn btn-outline-primary btn-sm">
                                    <i class="fab fa-twitter"></i> Twitter
                                </a>
                                <a href="#" class="btn btn-outline-primary btn-sm">
                                    <i class="fab fa-facebook"></i> Facebook
                                </a>
                                <a href="#" class="btn btn-outline-primary btn-sm">
                                    <i class="fab fa-linkedin"></i> LinkedIn
                                </a>
                            </div>
                        </div>
                        <div class="col-md-6 text-md-end mt-3 mt-md-0">
                            <a asp-controller="Home" asp-action="FrontPage" asp-route-industry="@Model.Industry" 
                               class="btn btn-primary-custom">
                                <i class="fas fa-arrow-left me-2"></i>Back to @Model.Industry Articles
                            </a>
                        </div>
                    </div>
                </footer>
            </article>
        </div>
    </div>
</div>
